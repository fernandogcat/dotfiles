# .exports

# Language
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# XDG
export XDG_CONFIG_HOME="$HOME/.config"
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/config"
export DOCKER_CONFIG="$XDG_CONFIG_HOME/docker"

# Starship
export STARSHIP_CONFIG="$XDG_CONFIG_HOME/starship/starship.toml"

# Eza
export EZA_COLORS='di=1;34'

# Pyenv
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"

# Dotnet (installed manually, not via chezmoi, for use with https://github.com/chickensoft-games/GodotEnv)
export PATH="$PATH:$HOME/.dotnet/tools"

# Godot
export GODOT="'$(godotenv godot env path)'"
export GODOT_VERSIONS="'$(dirname "$(godotenv godot env path)")/../versions/'"

# Homebrew
export PATH="/opt/homebrew/bin:$PATH"
